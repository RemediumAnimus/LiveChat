<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <title>NodeJS Chat</title>
</head>
<body>

<form class="login-form-operator" @submit.prevent="login">
    <input ref="username" type="hidden" value="operator">
    <input ref="password" type="hidden" value="12345">
    <button class="btn" type="submit">Оператор</button>
</form>

<form class="login-form-client1" @submit.prevent="login">
    <input ref="username" type="hidden" value="client1">
    <input ref="password" type="hidden" value="12345">
    <button class="btn" type="submit">Клиент1</button>
</form>

<form class="login-form-client2" @submit.prevent="login">
    <input ref="username" type="hidden" value="client2">
    <input ref="password" type="hidden" value="12345">
    <button class="btn" type="submit">Клиент2</button>
</form>

<form class="login-form" @submit.prevent="login">
    <div class="card">
        <div class="card-content">
            <h4 class="card-title">Awesome Chat!</h4>
            <div class="input-field">
                <input required ref="username" type="text" placeholder="Username"/>
                <label for="name">Name:</label>
            </div>
            <div class="input-field">
                <input required ref="password" type="text" placeholder="Room"/>
                <label for="password">Password:</label>
            </div>
        </div>
        <div class="error-text"></div>
        <div class="card-action">
            <button class="btn" type="submit">Авторизоваться</button>
        </div>
    </div>
</form>


<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/js/auth.js"></script>
</body>
</html>